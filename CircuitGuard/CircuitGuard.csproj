<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <Title>CircuitGuard</Title>
        <Authors>Piotr Gago</Authors>
        <Description>
A circuit breaker library for .NET, CircuitGuard is made to improve your application's stability and fault tolerance.</Description>
        <Copyright>Piotr Gago</Copyright>
        <RepositoryUrl>https://github.com/gagop/circuit-guard</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageTags>microservices;circuit breaker;resiliency;circuit;fault tolerance</PackageTags>
        <Version>1.0.1</Version>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="7.0.1" />
        <None Include="..\README.md">
            <Pack>True</Pack>
            <PackagePath>\</PackagePath></None>
    </ItemGroup>

</Project>
